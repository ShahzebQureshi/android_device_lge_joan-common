binder_call(system_app, {
    hal_power_default
    vold
    wificond
});

get_prop(system_app, {
    baseband_prop
    vendor_audio_prop
});

r_dir_file(system_app, {
    proc_pagetypeinfo
    proc_vmallocinfo
    sysfs_zram
});

# Battery Health
allow system_app sysfs_battery_supply:dir { search };
allow system_app sysfs_battery_supply:file { read };
allow system_app sysfs_battery_supply:file { open };
allow system_app sysfs_battery_supply:file { getattr };

allow system_app sysfs_lge_fingerprint:dir r_dir_perms;
allow system_app sysfs_lge_fingerprint:file rw_file_perms;
allow system_app sysfs_lge_hifi_dac:file rw_file_perms;

dontaudit system_app {
    apex_service
    system_suspend_control_service
    system_suspend_control_internal_service
}:service_manager find;
